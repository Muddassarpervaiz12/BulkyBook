@model Catogery
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-4 mt-3">
        <div class="row">
            <h4> Delete Category</h4>
        </div>
        <hr />
        <div class="mt-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-primary" style="width:150px"> Delete </button>
        <a asp-controller="Catogeries" asp-action="Index" class="btn btn-outline-dark"> Go Back</a>
    </div>
</form>